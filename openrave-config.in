#!/bin/sh

prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix_set=no

usage="\
Usage: rave-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--cflags] [--libs] [--libs-only-l] [--libs-only-L] [--cflags-only-I] [--shared-libs]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo @RAVE_RELEASE@
      ;;
    --cflags)
      echo  -I@CMAKE_INSTALL_PREFIX@/include
      ;;
    --cppflags)
      echo  -I@CMAKE_INSTALL_PREFIX@/include
      ;;
    --cflags-only-I)
      echo -I@CMAKE_INSTALL_PREFIX@/include
      ;;
    --libs)
      echo -L@CMAKE_INSTALL_PREFIX@/lib -lopenrave
      ;;
    --libs-only-l)
      echo -lopenrave
      ;;
    --libs-only-L)
      echo -L@CMAKE_INSTALL_PREFIX@/lib
      ;;
    --shared-libs)
      echo  -L@CMAKE_INSTALL_PREFIX@/lib -lopenrave.so
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
